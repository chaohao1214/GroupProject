<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/OCTranspo"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:text="OCTranspo Bus"
        app:layout_constraintBottom_toTopOf="@+id/CarCharge"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CarCharge"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:text="Electric Car Charging"
        app:layout_constraintBottom_toTopOf="@+id/MovieInfo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/Soccer"
        android:layout_width="406dp"
        android:layout_height="48dp"
        android:text="Soccer Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MovieInfo"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/MovieInfo"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:text="Movie Information"
        app:layout_constraintTop_toBottomOf="@+id/CarCharge"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>