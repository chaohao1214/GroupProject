<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/OCTranspo"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:text="OCTranspo Bus"
        app:layout_constraintBottom_toTopOf="@+id/CarCharge"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/CarCharge"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OCTranspo"
        android:layout_alignStart="@+id/OCTranspo"
        android:layout_alignLeft="@+id/OCTranspo"

        android:layout_marginBottom="32dp"
        android:text="Electric Car Charging"
        app:layout_constraintBottom_toTopOf="@+id/Soccer"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/movie_info"
        android:layout_width="282dp"
        android:layout_height="110dp"
        android:layout_marginBottom="56dp"
        android:contentDescription="movieFinder"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/movie_icon1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Soccer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_info"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Soccer"
        app:layout_constraintBottom_toTopOf="@+id/movie_info"


        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>