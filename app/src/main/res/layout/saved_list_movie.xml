<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><![CDATA[
    android:id="@+id/movieList">













    ]]>

    <TextView
        android:id="@+id/movie_image_text"
        android:layout_width="69dp"
        android:layout_height="36dp"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Image"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_title_text"
        app:layout_constraintEnd_toStartOf="@+id/movie_title_text"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/movie" />

    <TextView
        android:id="@+id/movie_title_text"
        android:layout_width="80dp"
        android:layout_height="35dp"

        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:text="Title"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/movie_year_text"
        app:layout_constraintStart_toEndOf="@+id/movie_image_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/movie_year_text"
        android:layout_width="80dp"
        android:layout_height="35dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Year"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_movie"
        android:layout_width="391dp"
        android:layout_height="430dp"
        android:saveEnabled="true"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="69dp" />

</androidx.constraintlayout.widget.ConstraintLayout>