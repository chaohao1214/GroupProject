<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_shadow_start_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/OCTranspo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="OCTranspo Bus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CarCharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:text="Electric Car Charging"
        app:layout_constraintBottom_toTopOf="@+id/MovieInfo"
        app:layout_constraintTop_toBottomOf="@+id/OCTranspo"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/Soccer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Soccer Game"
        app:layout_constraintTop_toBottomOf="@+id/MovieInfo"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/MovieInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:text="Movie Information"
        app:layout_constraintBottom_toTopOf="@+id/Soccer"
        app:layout_constraintTop_toBottomOf="@+id/CarCharge"
        tools:layout_editor_absoluteX="-16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>